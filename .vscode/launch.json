{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build & Run",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/bin/RicoTech.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/bin",
            "preLaunchTask": "make",
            "environment": [],
            "externalConsole": true,
            "linux": {
                "MIMode": "gdb"
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb",
                "miDebuggerPath": "c:/MinGW/bin/gdb.exe"
            }
        },
        {
            "name": "Attach Debugger",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceRoot}/bin/RicoTech.exe",
            "processId": "${command.pickProcess}",
            "linux": {
                "MIMode": "gdb"
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb"
            }
        }
    ]
}